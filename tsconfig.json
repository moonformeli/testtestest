{
    "include": [
        "./src/*"
    ],
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "importHelpers": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "outDir": "intermediate",
        "allowJs": false,
        "jsx": "react",
        "rootDir": ".",
        "lib": [
            "dom",
            "es5",
            "es6",
            "es2017.object",
            "es2017"
        ],
        "typeRoots": [
            "node_modules/@types",
            "src/typings"
        ],
        "strictFunctionTypes": true
    },
}